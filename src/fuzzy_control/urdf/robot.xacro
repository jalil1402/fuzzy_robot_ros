<?xml version="1.0"?>
<robot name="diff_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- MATERIALS FOR VISUALIZATION -->
  <material name="blue"> <color rgba="0 0 0.8 1"/> </material>
  <material name="black"> <color rgba="0 0 0 1"/> </material>
  <material name="grey"> <color rgba="0.5 0.5 0.5 1"/> </material>

  <!-- BASE LINK (The Body) -->
  <link name="base_link">
    <visual>
      <geometry> <box size="0.4 0.2 0.1"/> </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry> <box size="0.4 0.2 0.1"/> </geometry>
    </collision>
    <inertial>
      <!-- Increased to 15kg for stability -->
      <mass value="15.0"/>
      <inertia ixx="0.0625" ixy="0" ixz="0" iyy="0.2125" iyz="0" izz="0.25"/>
    </inertial>
  </link>

  <!-- LEFT WHEEL -->
  <link name="left_wheel">
    <visual>
      <geometry> <cylinder length="0.05" radius="0.1"/> </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry> <cylinder length="0.05" radius="0.1"/> </geometry>
    </collision>
    <inertial>
      <mass value="2.5"/>
      <inertia ixx="0.007" ixy="0" ixz="0" iyy="0.007" iyz="0" izz="0.0125"/>
    </inertial>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.1 0.15 0" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- RIGHT WHEEL -->
  <link name="right_wheel">
    <visual>
      <geometry> <cylinder length="0.05" radius="0.1"/> </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry> <cylinder length="0.05" radius="0.1"/> </geometry>
    </collision>
    <inertial>
      <mass value="2.5"/>
      <inertia ixx="0.007" ixy="0" ixz="0" iyy="0.007" iyz="0" izz="0.0125"/>
    </inertial>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.1 -0.15 0" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- CASTER WHEEL (For balance) -->
  <link name="caster">
    <visual>
      <geometry> <sphere radius="0.05"/> </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry> <sphere radius="0.05"/> </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>

  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster"/>
    <origin xyz="-0.15 0 -0.05"/>
  </joint>

  <!-- GAZEBO PHYSICS PROPERTIES -->
  <!-- High friction for drive wheels -->
  <gazebo reference="left_wheel">
    <mu1>2.0</mu1>
    <mu2>2.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="right_wheel">
    <mu1>2.0</mu1>
    <mu2>2.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- Low friction for caster so it slides easily -->
  <gazebo reference="caster">
    <mu1>0.01</mu1>
    <mu2>0.01</mu2>
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
  </gazebo>

  <!-- DIFFERENTIAL DRIVE PLUGIN -->
  <gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <updateRate>100</updateRate>
      <leftJoint>left_wheel_joint</leftJoint>
      <rightJoint>right_wheel_joint</rightJoint>
      <wheelSeparation>0.3</wheelSeparation>
      <wheelDiameter>0.2</wheelDiameter>
      <!-- Increased torque for the heavier 20kg robot -->
      <wheelTorque>30</wheelTorque>
      <wheelAcceleration>1.0</wheelAcceleration>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_link</robotBaseFrame>
      <publishWheelTF>true</publishWheelTF>
      <publishOdomTF>true</publishOdomTF>
      <publishWheelJointState>true</publishWheelJointState>
      <odometrySource>1</odometrySource>
    </plugin>
  </gazebo>

</robot>